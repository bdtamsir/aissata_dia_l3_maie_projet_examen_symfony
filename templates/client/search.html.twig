{% extends 'base.html.twig' %}

{% block title %}Rechercher un client{% endblock %}

{% block body %}
<h1>Rechercher un client</h1>
<form method="get" action="/client/search">
    <div class="mb-3">
        <label for="telephone" class="form-label">Numéro de téléphone</label>
        <input type="text" id="telephone" name="telephone" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">Rechercher</button>
</form>

{% if client is defined %}
    <hr>
    <h2>Informations du client</h2>
    <ul>
        <li><strong>Nom :</strong> {{ client.nom }}</li>
        <li><strong>Prénom :</strong> {{ client.prenom }}</li>
        <li><strong>Ville :</strong> {{ client.ville }}</li>
        <li><strong>Quartier :</strong> {{ client.quartier }}</li>
        <li><strong>Numéro de villa :</strong> {{ client.numeroVilla }}</li>
    </ul>
{% endif %}
{% endblock %}
